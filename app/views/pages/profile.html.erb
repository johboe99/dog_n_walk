<div class="d-flex justify-content-center align-items-center">
  <div class="row w-100">
    <div class="text-center mx-auto my-5" style="max-width: 800px;">
      <img src="https://via.placeholder.com/100" alt="Profile Picture">
      <h2><%= current_user.first_name %> <%= current_user.last_name %></h2>
      <p><%= current_user.email %></p>
    </div></div>
</div>

<div class="d-flex justify-content-center align-items-center">
  <div class="row w-100">
    <h2 class="mb-2 mx-auto" style="max-width: 800px;">User details</h2>
    <div class="profile-container mx-auto mb-5" style="max-width: 800px;">
      <div class="info">
          <div>
            <span>First Name:</span>
            <p><%= current_user.first_name %></p>
          </div>
          <div>
            <span>Last Name:</span>
            <p><%= current_user.last_name %></p>
          </div>
          <div>
            <span>Email:</span>
            <p><%= current_user.email %></p>
          </div>
      </div>
    </div></div>
  </div>


<div class="d-flex justify-content-center align-items-center">
  <div class="row w-100">
  <h2 class="mb-2 mx-auto" style="max-width: 800px;">Dog details</h2>
    <% @dogs.each do |dog| %>
      <div class="profile-container mx-auto mb-3" style="max-width: 800px;">
        <div class="info">
              <div>
                <span>Name:</span>
                <p><%= dog.name %></p>
              </div>
              <div>
                <span>Breed:</span>
                <p><%= dog.breed %></p>
              </div>
              <div>
                <span>Age:</span>
                <p><%= dog.age %></p>
              </div>
          </div>
        </div>
      <% end %>
  </div>
</div>
