<div class = "container">
  <div class="my-3">
  <%= link_to dogs_path, class: 'btn btn-outline-primary' do %>
    <i class="fa-solid fa-arrow-left-long"></i> Go back
  <% end %>
  </div>
  <h1><%= @dog.name%></h1>
  <h3 class = "text-custom-gray" style= "color:#6c757d"><%= @dog.breed %></h3>
  <div class="card bg-white my-3 px-3 py-3">
    <p class = "text-custom-gray" style= "color:#6c757d">Age</p>
    <p><%= @dog.age %> years old</p>
    <p class = "text-custom-gray" style= "color:#6c757d">Description</p>
    <p><%= @dog.description %></p>
  <%= link_to "Go on a walk with me!", new_dog_booking_path(@dog), class: 'btn btn-primary' %>
  </div>
</div>
